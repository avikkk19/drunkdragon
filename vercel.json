{
  "version": 2,
  "builds": [
    {
      "src": "./server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "./client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "./dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "./server/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}
